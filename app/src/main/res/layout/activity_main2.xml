<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="Donate"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv"
        android:layout_marginTop="5dp"
        android:background="@color/grey2"
        tools:ignore="InvalidId,MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/card">
        

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Concord"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:layout_marginTop="-2dp"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/tv1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="3dp"
                android:background="@color/grey2"
                tools:ignore="InvalidId,MissingConstraints" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/veg"
                android:layout_marginStart="15dp"
                android:layout_below="@id/tv2"
                android:layout_marginTop="17dp"
                />

            <EditText
                android:id="@+id/et"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_toEndOf="@+id/iv"
                android:layout_marginStart="15dp"
                android:textSize="16dp"
                android:inputType="number"
                android:layout_below="@+id/tv2"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_toEndOf="@id/et"
                android:layout_marginTop="17dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Person"
                />
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toEndOf="@id/tv3"
                android:layout_below="@id/tv2"
                android:layout_marginTop="22dp"
                android:src="@drawable/multiplication"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_toEndOf="@id/iv1"
                android:layout_marginTop="17dp"
                android:textSize="16dp"
                android:text="Available Food"
                />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/veg"
                android:layout_marginStart="15dp"
                android:layout_below="@id/iv"
                android:layout_marginTop="17dp"
                />

            <EditText
                android:id="@+id/et1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_toEndOf="@+id/iv2"
                android:layout_marginStart="15dp"
                android:textSize="16dp"
                android:layout_below="@+id/tv3"/>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv3"
                android:layout_toEndOf="@id/et1"
                android:layout_marginTop="17dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:text="kg"
                />
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toEndOf="@id/tv5"
                android:layout_below="@id/iv1"
                android:layout_marginTop="22dp"
                android:src="@drawable/multiplication"/>

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4"
                android:layout_toEndOf="@id/iv3"
                android:layout_marginTop="17dp"
                android:textSize="16dp"
                android:text="Available Food"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/iv2"
                android:layout_marginTop="10dp"
                android:background="@color/grey2"
                tools:ignore="InvalidId,MissingConstraints" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv2"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginStart="15dp"
                android:text="Donation Number : "/>

            <EditText
                android:id="@+id/et2"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_toEndOf="@+id/tv7"
                android:layout_marginStart="12dp"
                android:textSize="16dp"
                android:inputType="number"
                android:layout_below="@+id/tv6"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv7"
                android:layout_marginTop="10dp"
                android:background="@color/grey2"
                tools:ignore="InvalidId,MissingConstraints" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv7"
                android:text="Donate Again"
                android:layout_marginTop="8dp"
                android:layout_marginStart="-5dp"
                android:textColor="@color/orange"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:text="Send Your Current Location"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:ignore="NotSibling" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/card"
        android:layout_marginTop="55dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/card1">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="380dp"

            tools:context=".MapsActivity"
            tools:ignore="NotSibling" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_marginTop="-1dp"
        android:text="submit"
        android:backgroundTint="@color/Lightorange"
        android:layout_centerHorizontal="true"
        android:textColor="@color/orange"
        />



</RelativeLayout>