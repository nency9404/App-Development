<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/hands"

    tools:context=".register_login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-20dp"
        android:backgroundTint="#EDDDD4"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Us"
                android:textSize="33sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your details to sign up or login"
                android:textSize="20sp"
                />
            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/edit_user"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradient"
                android:padding="8dp"
                android:hint="Email"

                android:textColor="#121616"
                />
            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/edit_pass"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradient"
                android:padding="8dp"
                android:hint="Password"
                android:textColor="#121616"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0."
                android:background="@color/l_primary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="LOG IN"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed-medium"
                android:id = "@+id/btn"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Don't have an account?  "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register here"
                    android:textStyle="bold"
                    android:textColor="@color/l_primary"
                    android:id="@+id/register_here"
                    android:backgroundTint="#EDDDD4"
                    />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>